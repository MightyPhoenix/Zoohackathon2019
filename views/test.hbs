<div class="custom-container mx-auto" >
    <h1 class="text-center">
        New Elephant Registration
    </h1>
    <hr>
   
    <form enctype="multipart/form-data" action="/" method="POST">
        <div class="form-group">
            <label>Select Owner</label>
            <select class="form-control" name="owner">
                <option value="Santosh">Santosh</option>
                <option value="Rakesh">Rakesh</option>
                <option value="Mukesh">Mukesh</option>
                <option value="Babu">Babu</option>
                <option value="Chotu">Chotu</option>
            </select>
        </div>

        <div class="form-group">
            <label>Elephant Alias</label>
            <input class="form-control" type="text" name="alias" placeholder="Known Aliases">
        </div>

       
        <div class="form-group">
            <label>Upload Trunk Picture</label>
            <input class="form-control-file" name="ElephantImages" type="file" multiple>
        </div>

        <div class="form-group">
            <label>Add History Of Elephant</label>
            <input class="form-control" name="history" type="text" placeholder="Enter History">
        </div>

        <div class="form-group">
            <label>Veterinarian Check</label>
            <textarea class="form-control" name="v_check"></textarea>
        </div>

        <button type="submit" class="text-center btn btn-success w-100">Create!</button>
    </form>
</div>
